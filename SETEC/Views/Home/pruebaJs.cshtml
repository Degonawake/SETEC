<!DOCTYPE html>
<html>

<head>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var valor = 0;
            var input = document.getElementById("screencalc");
            var buttons = document.querySelectorAll(".btn-primary");

            buttons.forEach(function (button) {
                button.addEventListener("click", function () {
                    var buttonText = this.textContent;
                    if (buttonText === "=") {
                        try {
                            valor = eval(input.value);
                            input.value = valor;
                        } catch (error) {
                            input.value = "Error";
                        }
                    } else if (buttonText === "CE") {
                        input.value = "";
                    } else if (buttonText === "C") {
                        input.value = input.value.slice(0, -1);
                    } else {
                        input.value += buttonText;
                    }
                });
            });
        });
    </script>
</head>
<body>
    <center>
        <div style="width: 250px; background-color: lightgray; padding: 20px;">
            <input id="screencalc" style="width: 150px" />
            <br />
            <br />
            <button class="btn btn-primary" value="1">1</button>
            <button class="btn btn-primary" value="2">2</button>
            <button class="btn btn-primary" value="3">3</button>
            <button class="btn btn-primary" id="sum">+</button>
            <br />
            <br />
            <button class="btn btn-primary" value="4">4</button>
            <button class="btn btn-primary" value="5">5</button>
            <button class="btn btn-primary" value="6">6</button>
            <button class="btn btn-primary" id="subtrac">-</button>
            <br />
            <br />
            <button class="btn btn-primary" value="7">7</button>
            <button class="btn btn-primary" value="8">8</button>
            <button class="btn btn-primary" value="9">9</button>
            <button class="btn btn-primary" id="multi">*</button>
            <br />
            <br />
            <button class="btn btn-primary" id="ce">CE</button>
            <button class="btn btn-primary" id="c">C</button>
            <button class="btn btn-primary" value="0">0</button>
            <button class="btn btn-primary" id="div">/</button>
            <br />
            <br />
            <button class="btn btn-primary" id="equals">=</button>
        </div>
    </center>
</body>

</html>



