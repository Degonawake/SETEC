@model IEnumerable<SETEC.Data.Entities.Verificacion>

@{
    ViewData["Title"] = "IndexAsignacion";
}

<div class="bg-white" style="padding: 0 20px 20px 20px;">
    <h1 style="color:darkslateblue;">Asignar Orden de Verificación</h1>

   
    <div class="table-container bg-white">
        <table class="table table-bordered table-striped">
            <thead>
                <tr class="btnB text-center text-capitalize">
                    <th>
                        Fecha de Creacion de Orden
                    </th>
                    <th>
                        Fecha Planeada de Verificación
                    </th>
                    <th>
                        Empresa Encargada
                    </th>
                    <th>
                        Identidad del Cliente a Verificar
                    </th>
                    <th>
                        Nombre del Cliente a Verificar
                    </th>
                    <th>
                        Tienda que Envia la Verificación
                    </th>
                    <th>
                        Comentario Referente a la Verificación
                    </th>
                    <th>
                        Estado de la Verificación
                    </th>
                    <th>
                        Nombre del Verificador
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Fecha_Creacion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Fecha_Verificacion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Empresa_Verificacion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Identidad)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nombre_Cliente)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Tienda)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Comentario)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Status)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Gestor)
                        </td>

                        <td>
                            <a asp-action="EditarAsignacion" asp-route-id="@item.id">Asignar</a> |
                            
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>