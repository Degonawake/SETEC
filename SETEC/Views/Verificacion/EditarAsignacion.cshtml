@model SETEC.Data.Entities.Verificacion

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Verificacion</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditarAsignacion">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <div class="form-group">
                <label asp-for="Fecha_Creacion" class="control-label"></label>
                <input asp-for="Fecha_Creacion" class="form-control" readonly />
                <span asp-validation-for="Fecha_Creacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fecha_Verificacion" class="control-label"></label>
                <input asp-for="Fecha_Verificacion" class="form-control" readonly />
                <span asp-validation-for="Fecha_Verificacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Empresa_Verificacion" class="control-label"></label>
                <input asp-for="Empresa_Verificacion" class="form-control" readonly />
                <span asp-validation-for="Empresa_Verificacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Identidad" class="control-label"></label>
                <input asp-for="Identidad" class="form-control" readonly />
                <span asp-validation-for="Identidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nombre_Cliente" class="control-label"></label>
                <input asp-for="Nombre_Cliente" class="form-control" readonly />
                <span asp-validation-for="Nombre_Cliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tienda" class="control-label"></label>
                <input asp-for="Tienda" class="form-control" readonly />
                <span asp-validation-for="Tienda" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label">Estado de la Verificacion</label>
                <input asp-for="Status" class="form-control" value="Verificacion Asignada"/>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comentario" class="control-label"></label>
                <textarea asp-for="Comentario" class="form-control" rows="10" readonly></textarea>
                <span asp-validation-for="Comentario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gestor" class="control-label"></label>
                <input asp-for="Gestor" class="form-control"/>
                <span asp-validation-for="Gestor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="IndexAsignacion">Back to List</a>
</div>

